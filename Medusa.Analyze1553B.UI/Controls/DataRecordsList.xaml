                                                    Converter={StaticResource MyCommandWordToColorConverter}}" />
              <Setter Property="Foreground" Value="#FF4B94EC"/>
            </Style>
        </ListView.ItemContainerStyle>-->
        
    </ListView>
        
    
    </DockPanel>
    
</ui:CommonPageUserControl>
