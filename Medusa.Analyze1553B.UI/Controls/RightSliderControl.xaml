<UserControl x:Class="Medusa.Analyze1553B.UI.Controls.RightSliderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:Medusa.Analyze1553B.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Slider x:Name="Update"
                Grid.Row="1" Grid.Column="2" 
                Value="{Binding currentRow, UpdateSourceTrigger=PropertyChanged}"
                Minimum="0" Maximum="{Binding rowCount}" 
                SelectionStart="{Binding currentRow}" Width="25" 
                IsSelectionRangeEnabled="True" Orientation="Vertical"
                TickFrequency="500">
        <Slider.LayoutTransform>
            <ScaleTransform ScaleY="-1"/>
        </Slider.LayoutTransform>
        <!--<i:Interaction.Triggers>
            <i:EventTrigger EventName="PreviewMouseUp">
                <i:InvokeCommandAction  Command="{Binding Commands.UpdateCurrentRowCommand}"
                                                        CommandParameter="{Binding ElementName=myListView}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>-->
    </Slider>
</UserControl>
